<div class="row">
    {{#each notes}}
        <div class="col-md-3 mb-3 column">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title">{{title}} </h5>
                    <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <p>
                        {{description}}
                    </p>
                    <a href="/notes/delete/{{_id}}" class="btn btn-danger btn-sm col-12">Delete</a>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <h1>Welcome {{user.name}}!</h1>
                <p class="lead">There aren't notes yet</p>
                <a href="/notes/add" class="btn btn-success col-12">Create one</a>
            </div>
        </div>
    {{/each}}
</div>